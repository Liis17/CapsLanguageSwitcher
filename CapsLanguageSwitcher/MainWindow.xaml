<Window
    x:Class="CapsLanguageSwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapsLanguageSwitcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CapsLanguageSwitcher"
    Width="450"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Background="#1e1e1e">
        <StackPanel
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="CapsLock Language Switcher"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="14"
                Foreground="White"
                Text="Нажмите CapsLock для переключения между русским и английским языками."
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White"
                Text="Используйте CapsLock для смены языка"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White"
                Text="Приложение можно свернуть, оно продолжить работать"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>
        <TextBlock
            x:Name="VersionTextBlock"
            Margin="0,0,4,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Foreground="White"
            Opacity="0.2"
            Text="v" />
        <CheckBox
            x:Name="AutoStartCheckBox"
            Margin="4,0,0,2"
            VerticalAlignment="Bottom"
            Checked="AutoStartCheckBox_Checked"
            Content="Запускать с Windows"
            Foreground="White"
            Unchecked="AutoStartCheckBox_Unchecked" />
    </Grid>
</Window>
